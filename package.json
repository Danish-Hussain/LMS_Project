{
  "name": "lms-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
  "dev": "next dev --turbopack",
  "postinstall": "prisma generate",
    "seed": "ts-node prisma/seed.ts",
  "build": "rm -rf .next && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test:e2e": "playwright test",
    "ci:e2e": "start-server-and-test 'npm run dev' http://localhost:3001 'npm run test:e2e'",
    "test:auth": "playwright test tests/e2e/auth.spec.ts",
    "auth:setup": "rm -f tests/e2e/storageState.json && npm run test:auth",
    "prisma:seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^6.17.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@vimeo/player": "^2.17.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.545.0",
    "next": "^15.5.4",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "prisma": "^6.17.1",
    "razorpay": "^2.2.0",
    "react-player": "^3.3.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.39.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
